#!/bin/bash

# show a stash by index
function git_stashowp() {
  if [ $# -ne 1 ]; then
    echo "ERROR: Stash index not specified."
    return 1
  fi

  local regex='^[0-9]+$'
  if [[ $1 =~ $regex ]] ; then
    git stash show -p stash@{$1}
  else
    echo "ERROR: '$1' is not a valid number."
    return 1
  fi
}


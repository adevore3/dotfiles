#!/bin/bash

# List cheatsheet comands and execute the selected command
function cheat_execute() {
  if [ $# -ne 1 ]; then
    echo ERROR: Must specifiy a valid cheatsheet - 'cheat -l'
    return 1
  fi

  local cheatsheet=$1

  select_from_options "cheat $cheatsheet | grep -v '\\#' | egrep '^$cheatsheet'"

  local desired_command=$(ret select_from_options)

  echo
  echo "Executing '$desired_command'"
  echo

  echo -n "$desired_command" | save_to_all_clipboards

  eval ${desired_command}
}


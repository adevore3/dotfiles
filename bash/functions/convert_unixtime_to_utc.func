#!/bin/bash

# Using date, convert unixtime to utc datetime
function convert_unixtime_to_utc() {
  if [[ -z "$1" ]]; then
    if [[ -p /dev/stdin ]]; then # input from a pipe
        read -r p
    else
        echo "ERROR: No timestamp given" >&2
        return 1
    fi
  else
      unixtime=$1
  fi
  date -ud "@$unixtime" +'%Y-%m-%d %H:%M:%S'
}


#!/bin/bash

# Prefix a directory to path
function conditionally_prefix_path() {
  if [ $# -ne 1 ]; then
    echo "Usage: conditionally_prefix_path <path-to-directory>"
    return 1
  fi

  local dir=$1
  if [ ! -d "$dir" ]; then
    echo "ERROR: '$dir' is not a directory"
    return 1
  fi

  PATH="$dir:${PATH}"
}


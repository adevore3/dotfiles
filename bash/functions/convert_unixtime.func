#!/bin/bash

# Using date, convert unixtime to datetime
function convert_unixtime() {
  if [[ -z "$1" ]]; then
    if [[ -p /dev/stdin ]]; then # input from a pipe
        read -r p
    else
        echo "ERROR: No timestamp given" >&2
        return 1
    fi
  else
    unixtime=$(echo $1 | sed 's/,//g')
  fi
  date -d "@$unixtime"
}


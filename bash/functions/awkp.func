#!/bin/bash

# Using awk, print the specified column
function awkp() {
  if [ $# -ne 1 ]; then
    echo "ERROR: Column # not specified."
    return 1
  fi

  local regex='^[0-9]+$'
  if [[ $1 =~ $regex ]]; then
    awk -vfield="1" '{print $field}'
  else
    echo "ERROR: '$1' is not a valid number."
    return 1
  fi
}


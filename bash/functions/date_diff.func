#!/bin/bash

source "${DOTFILES}/bash/functions/log_utils.sh"

# Get the diff between two dates in seconds
function date_diff() {
  if [ $# -ne 2 ]; then
    log_error "No dates specified"
    return 1
  fi

  local res=$(( $(date -d "$1" +"%s") - $(date -d "$2" +"%s") ))

  res=${res#-}

  log_info "${res}s"
  date -d@${res} -u +%H:%M:%S
}


#!/bin/bash

# Transpose random log entry and sort
function transpose_random_and_sort() {
  if [ $# -ne 1 ]; then
    echo "Error: No file specified."
    return 1
  fi

  local filename=$1
  if [ -f $filename ]; then
    local random_line_number=$((1 + RANDOM % $(cat $filename | wc -l)))
    sed -n $random_line_number,${random_line_number}p $filename | transpose-log-entries | sort
  else
    echo "'$filename' is not a valid file"
  fi
}


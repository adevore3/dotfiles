hi CursorColumn cterm=NONE ctermbg=cyan ctermfg=white guibg=darkred guifg=white
nnoremap <leader>l :set cursorline! <CR>
nnoremap <leader>c :set cursorcolumn! <CR>
nnoremap <leader><space> :noh<cr>

set cursorline

